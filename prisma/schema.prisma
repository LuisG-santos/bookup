// ---------- Configuração básica ----------
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------- Enum de papéis por tenant ----------
enum Role {
  CLIENT   // cliente que agenda
  OWNER    // dono do comércio
}

// ---------- Models do Auth.js (ajustados) ----------

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  accounts      Account[]
  sessions      Session[]
  bookings      Booking[]
  memberships   CommerceMembership[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ---------- Multi-tenant / Domínio do SaaS ----------

model Commerce {
  id              String     @id @default(uuid())
  name            String
  address         String?
  phones          String[]   // pode ter vários telefones
  instagram       String?    // @barbearia_x
  description     String?
  imageURL        String    // logo / foto principal

  // Personalização (tenant)
  primaryColor    String
  secondaryColor  String
  backgroundColor String
  heroImageURL   String?
  heroTitle       String
  heroSubtitle    String
  subdomain       String     @unique   // ex: "barbearia-x"

  // Horarios dinâmicos
  openingTimeMinutes Int      @default(540)  // 9:00 AM
  closingTimeMinutes Int      @default(1020) // 5:00 PM
  
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  services        Services[]
  users           CommerceMembership[]
  bookings        Booking[]
}

// Relaciona User <-> Commerce com papel naquele tenant
model CommerceMembership {
  id         String   @id @default(cuid())
  userId     String
  commerceId String
  role       Role

  user       User     @relation(fields: [userId], references: [id])
  commerce   Commerce @relation(fields: [commerceId], references: [id])

  @@unique([userId, commerceId])           // 1 vínculo por commerce
  @@map("commerce_memberships")
}

// ---------- Serviços e agendamentos ----------

model Services {
  id          String    @id @default(uuid())
  name        String
  category    String
  commerceId  String
  description String
  imageURL    String
  price       Decimal   @db.Decimal(10, 2)
  duration    Int      

  commerce    Commerce  @relation(fields: [commerceId], references: [id])
  bookings    Booking[]
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELED
  FINALIZED
}

model Booking {
  id         String   @id @default(uuid())
  userId     String   // quem agendou (cliente)
  serviceId  String
  commerceId String
  date       DateTime
  status     BookingStatus @default(PENDING)   // ex: PENDING, CONFIRMED, CANCELED

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id])
  service    Services @relation(fields: [serviceId], references: [id])
  commerce   Commerce @relation(fields: [commerceId], references: [id])
}